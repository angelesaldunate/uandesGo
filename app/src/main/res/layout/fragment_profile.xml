<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.angeles.uandesgo.ProfileFragment">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:cropToPadding="true"
        android:src="@drawable/animal" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="Jaime"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/user_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text=""
            android:visibility="invisible"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/user_email_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/user_email_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_email_black" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/sample_email"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/user_address_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/user_address_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_call_black_24dp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+56967850482"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/user_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/number"
                android:textSize="18sp"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonEdit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/editar"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/cancelar"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_ok"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/ok"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible" />
    </LinearLayout>



</LinearLayout>
