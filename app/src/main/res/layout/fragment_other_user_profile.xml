<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.angeles.uandesgo.OtherUserProfileFragment">

    <ImageView
        android:id="@+id/userImage_o"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:cropToPadding="true"
        android:src="@drawable/animal" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name_o"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="Jaime"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/user_email_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/user_email_icon_o"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_email_black" />

            <TextView
                android:id="@+id/user_email_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/sample_email"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/user_address_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/user_address_icon_o"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_call_black_24dp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/user_phone_o"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+56967850482"
                android:gravity="center_vertical"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>




</LinearLayout>
